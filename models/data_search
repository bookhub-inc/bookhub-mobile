import 'package:Bookhub/estante.dart';
import 'dart:convert';
import 'dart:core';
import 'package:Bookhub/models/livros.dart';
import 'package:http/http.dart' as http;
import 'package:flutter/material.dart';
import 'dart:async';
import 'package:Bookhub/api.dart';
class DataSearch extends SearchDelegate<String>{
int _id;
DataSearch(this._id);

@override
List<Widget> buildActions(BuildContext context) {
  return [
    IconButton(
      icon: Icon(Icons.clear),
      onPressed: () {
        query = "";
      },
    )
  ];
}

@override
Widget buildLeading(BuildContext context) {
  return IconButton(
    icon: AnimatedIcon(
      icon: AnimatedIcons.menu_arrow,
      progress: transitionAnimation,
    ),
    onPressed: () {
      close(context, null);
    },
  );
}








@override
Widget buildResults(BuildContext context) {

  return Container(
    child: FutureBuilder(
      future: ApiService.getBooks(query),
      builder: (BuildContext context, AsyncSnapshot snapshot){
        if(snapshot.data == null){
          return Container(
            child: Center(
              child: Text("Loading..."),
            ),
          );
        } else {
          return ListView.builder(
            itemCount: snapshot.data.length,
            itemBuilder: (BuildContext context, int index) {
              return Container(
                child:ListTile(
                  leading: CircleAvatar(
                    backgroundImage: NetworkImage(snapshot.data[index].url),
                  ),
                  title: Text(snapshot.data[index].nome),
                  subtitle: Text(snapshot.data[index].autor),
                  onTap: (){
                    bool _isChecked = false;
                    TextEditingController notaLivro = TextEditingController();
                    showDialog(
                      context: context,
                      builder: (BuildContext context) {
                        // return object of type Dialog
                        return AlertDialog(
                          title: new Text('Adicionar ${snapshot.data[index].nome}'),
                          content: Padding(
                            padding: EdgeInsets.all(10),
                            child: Column(
                            crossAxisAlignment: CrossAxisAlignment.stretch,
                            children: <Widget>[
                                  Text("Que nota vocÃª daria a ele?"),
                                  TextField(
                                    controller: notaLivro,
                                    keyboardType: TextInputType.number,
                                    decoration: InputDecoration(
                                        border: InputBorder.none,
                                      helperText: "A nota deve ser de 0 a 10",
                                    ),
                                  ),
                            ],
                          ),
                        ),
                          actions: <Widget>[
                            // usually buttons at the bottom of the dialog
                            Row(
                              children: <Widget>[
                                FlatButton(
                                  child: new Text("Cancelar"),
                                  onPressed: () {
                                    Navigator.pop(context);
                                  },
                                ),
                        FlatButton(
                              child: new Text("Adicionar"),
                              onPressed: () {
                                int nota = notaLivro.text.hashCode;
                                ApiService.addEstante(snapshot.data[index].id, _id, 10, true, true);
                                showDialog(
                                  context: context,
                                  builder: (BuildContext context) {
                                    // return object of type Dialog
                                    return AlertDialog(
                                      title: new Text('Livro adicionado!'),
                                      content: Text("Continue a ler mais livros e adiciona-los na sua estante!"),
                                      actions: <Widget>[
                                            FlatButton(
                                              child: new Text("OK"),
                                              onPressed: () {
                                    Navigator.pop(context);
                                    },
                                            ),


                                      ],
                                    );
                                  },
                                );
                              },
                            ),
                        ],
                            ),
                          ],
                        );
                      },
                    );
                  },
                ),
              );
            },

          );
        }
      },
    ),
  );

}
















@override
Widget buildSuggestions(BuildContext context) {
  return Container();
}

}

