                OutlineButton(
                  onPressed: () {},
                  child: Text("Recomendado"),
                  borderSide: BorderSide(color: Colors.blue),
                  shape: StadiumBorder(),
                ),
                OutlineButton(
                  onPressed: () {},
                  child: Text("Menor Preço"),
                  borderSide: BorderSide(color: Colors.blue),
                  shape: StadiumBorder(),
